# =============================================================================
# CRYPTO MCP ASSISTANT CONFIGURATION
# =============================================================================

# AI & MCP Configuration
GROQ_API_KEY=your_groq_api_key_here
OPENAI_API_KEY=your_openai_api_key_here  # Optional alternative
MCP_CONFIG_PATH=config/mcp_config.json

# =============================================================================
# EXCHANGE API KEYS
# =============================================================================

# Binance API Configuration
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET_KEY=your_binance_secret_key_here
BINANCE_TESTNET=true  # Set to false for live trading

# Alternative Exchanges (Optional)
COINBASE_API_KEY=your_coinbase_api_key
COINBASE_SECRET=your_coinbase_secret
COINBASE_PASSPHRASE=your_coinbase_passphrase

KRAKEN_API_KEY=your_kraken_api_key
KRAKEN_SECRET=your_kraken_secret

# =============================================================================
# TRADINGVIEW INTEGRATION
# =============================================================================

TRADINGVIEW_USERNAME=your_tradingview_username
TRADINGVIEW_PASSWORD=your_tradingview_password
TRADINGVIEW_WEBHOOK_SECRET=your_webhook_secret

# =============================================================================
# NOTIFICATION SERVICES
# =============================================================================

# Discord Configuration
DISCORD_BOT_TOKEN=your_discord_bot_token
DISCORD_CHANNEL_ID=your_discord_channel_id
DISCORD_GUILD_ID=your_discord_guild_id

# Telegram Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# Email Notifications (Optional)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
EMAIL_ADDRESS=your_email@gmail.com
EMAIL_PASSWORD=your_app_password

# =============================================================================
# TRADING CONFIGURATION
# =============================================================================

# Risk Management
RISK_PERCENTAGE=2.0          # % din capital pentru fiecare trade
MAX_POSITIONS=5              # Numărul maxim de poziții simultane
MAX_DAILY_LOSS=10.0         # % pierdere maximă zilnică
STOP_LOSS_PERCENTAGE=2.0     # % stop loss implicit
TAKE_PROFIT_PERCENTAGE=6.0   # % take profit implicit

# Trading Mode
TRADING_MODE=paper           # paper, demo, live
PAPER_TRADING_BALANCE=10000  # Balanța inițială pentru paper trading

# Portfolio Settings
BASE_CURRENCY=USDT
MIN_ORDER_SIZE=10            # Mărimea minimă a ordinului în USDT
MAX_POSITION_SIZE=1000       # Mărimea maximă a poziției în USDT

# =============================================================================
# MARKET DATA CONFIGURATION
# =============================================================================

# Data Sources
PRIMARY_DATA_SOURCE=binance
BACKUP_DATA_SOURCE=coinbase

# Timeframes pentru analiză
PRIMARY_TIMEFRAME=5m
CONFIRMATION_TIMEFRAMES=15m,1h,4h

# Simboluri de monitorizat (separare cu virgulă)
WATCH_SYMBOLS=BTCUSDT,ETHUSDT,EGLDUSDT,ADAUSDT,SOLUSDT,DOTUSDT,LINKUSDT,MATICUSDT

# =============================================================================
# TECHNICAL ANALYSIS SETTINGS
# =============================================================================

# RSI Settings
RSI_PERIOD=14
RSI_OVERBOUGHT=70
RSI_OVERSOLD=30

# MACD Settings
MACD_FAST=12
MACD_SLOW=26
MACD_SIGNAL=9

# Bollinger Bands
BB_PERIOD=20
BB_STD=2

# Moving Averages
EMA_SHORT=9
EMA_LONG=21
SMA_PERIOD=50

# Volume Settings
VOLUME_THRESHOLD=1.5         # Multiplier pentru volum anormal

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# SQLite (default)
DATABASE_URL=sqlite:///data/crypto_assistant.db

# Redis pentru caching (optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# PostgreSQL (production) - optional
# DATABASE_URL=postgresql://user:password@localhost/crypto_assistant

# =============================================================================
# WEB INTERFACE CONFIGURATION
# =============================================================================

# FastAPI Settings
API_HOST=127.0.0.1
API_PORT=8000
API_DEBUG=true

# Streamlit Dashboard
STREAMLIT_PORT=8501
STREAMLIT_HOST=127.0.0.1

# Security
SECRET_KEY=your_secret_key_here_change_this_in_production
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256

# =============================================================================
# LOGGING & MONITORING
# =============================================================================

# Log Level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
LOG_FILE=logs/crypto_assistant.log
LOG_ROTATION=100 MB
LOG_RETENTION=30 days

# Monitoring
PROMETHEUS_PORT=8090
METRICS_ENABLED=true

# =============================================================================
# FEATURES FLAGS
# =============================================================================

# Enable/Disable Features
ENABLE_NOTIFICATIONS=true
ENABLE_WEB_INTERFACE=true
ENABLE_AUTO_TRADING=false    # ATENȚIE: Activează doar dacă ești sigur!
ENABLE_BACKTESTING=true
ENABLE_PAPER_TRADING=true
ENABLE_SOCIAL_SENTIMENT=true

# Advanced Features
ENABLE_GRID_TRADING=false
ENABLE_DCA_STRATEGY=true
ENABLE_FUTURES_TRADING=false # RISC MARE!

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================

# Development Mode
DEVELOPMENT_MODE=true
DEBUG_MCP=false

# Testing
RUN_TESTS_ON_STARTUP=false
TEST_DATABASE_URL=sqlite:///test_crypto_assistant.db

# =============================================================================
# BACKUP & RECOVERY
# =============================================================================

# Backup Settings
BACKUP_ENABLED=true
BACKUP_INTERVAL=24          # Ore între backup-uri
BACKUP_RETENTION=7          # Zile de păstrat backup-urile
BACKUP_PATH=backups/

# =============================================================================
# PERFORMANCE OPTIMIZATION
# =============================================================================

# Threading & Async
WORKER_THREADS=4
MAX_CONCURRENT_REQUESTS=100

# Caching
CACHE_TTL=300               # Secunde pentru cache-ul de preturi
CACHE_SIZE=1000             # Numărul maxim de elemente în cache

# Rate Limiting
API_RATE_LIMIT=60           # Requests per minute
EXCHANGE_RATE_LIMIT=10      # Requests per second către exchange

# =============================================================================
# ALERTS & THRESHOLDS
# =============================================================================

# Price Alerts
PRICE_CHANGE_THRESHOLD=5.0   # % schimbare preț pentru alertă
VOLUME_SPIKE_THRESHOLD=200   # % creștere volum pentru alertă

# System Alerts
CPU_THRESHOLD=80            # % CPU pentru alertă
MEMORY_THRESHOLD=80         # % memorie pentru alertă
DISK_THRESHOLD=90           # % spațiu disk pentru alertă